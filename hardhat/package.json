{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "hardhat": "^2.11.2"
  },
  "scripts": {
    "compile": "npx hardhat compile && mv ./artifacts/contracts/ ../src/",
    "chain": "npx hardhat node --network hardhat",
    "fork": "npx hardhat node --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "test": "npx hardhat test --network hardhat",
    "deploy": "npx hardhat run ./scripts/deploy.js" 
  }
}
